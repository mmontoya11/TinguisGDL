<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/mEventLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="22dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_nombre_tianguis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="21sp"
            android:textColor="@android:color/black"
            android:text="Tianguis del dia 01/09/19 "/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="@dimen/padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_top"
                android:text="@string/itempayment_nombre"
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_nombrePermisionario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_right"
                android:layout_marginTop="@dimen/padding_top"
                android:text=" juanito perez lopez gutierrez "
                android:textSize="17sp" />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/LinearLayout_datos_cobro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="@dimen/padding_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="19sp"
                        android:text="@string/itempayment_puesto" />
                    <TextView
                        android:id="@+id/tv_puesto"
                        android:layout_marginTop="@dimen/padding_top"
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:layout_marginLeft="@dimen/padding_right"
                        android:layout_height="wrap_content"
                        android:text="1A1"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_marginTop="@dimen/padding_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="19sp"
                        android:text="@string/itempayment_metros" />
                    <TextView
                        android:id="@+id/tv_metros"
                        android:layout_marginTop="@dimen/padding_top"
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:layout_marginLeft="@dimen/padding_right"
                        android:layout_height="wrap_content"
                        android:text="2 mts"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="@dimen/padding_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        android:text="@string/itempayment_saldo_antes" />
                    <TextView
                        android:id="@+id/tv_saldo_antes"
                        android:layout_marginTop="@dimen/padding_top"
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:layout_marginLeft="@dimen/padding_right"
                        android:layout_height="wrap_content"
                        android:text="10,000"/>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_marginTop="@dimen/padding_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        android:text="@string/itempayment_saldo_despues" />
                    <TextView
                        android:id="@+id/tv_saldo_despues"
                        android:layout_marginTop="@dimen/padding_top"
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:layout_marginLeft="@dimen/padding_right"
                        android:layout_height="wrap_content"
                        android:text="9,999"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:orientation="horizontal">




                    <TextView
                        android:layout_marginTop="@dimen/padding_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="19sp"
                        android:text="@string/itempayment_cobro" />
                    <TextView
                        android:id="@+id/tv_cobro_total"
                        android:layout_marginTop="@dimen/padding_top"
                        android:layout_width="wrap_content"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/padding_right"
                        android:layout_height="wrap_content"
                        android:text="9,999"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/item_paymentImageView"
                android:layout_toRightOf="@id/LinearLayout_datos_cobro"
                android:layout_width="100dp"
                android:src="@drawable/cobro"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="115dp"
                android:layout_height="100dp" />
        </RelativeLayout>


        <Button
            android:id="@+id/btn_registrar_cobro"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:background="@drawable/btn_rounded_red"
            android:text="Cobrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/btnImprimir"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:background="@drawable/btn_rounded_green"
            android:text="Imprimir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>